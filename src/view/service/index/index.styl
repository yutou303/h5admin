@import '../../../common/stylus/mixin.styl';
.serviceList
    .item
        borderTop(1px,#e6e6e6)
        display flex
        align-items center
        padding .3rem .25rem
        font-size .34rem
        color #5d5d5d
        .avatar
            width 1.15rem
            height 1.15rem
            img
                width 1.15rem
                height 1.15rem
                border-radius 3px
        .info
            flex 1
            margin 0 .25rem
            h3
                font-size .3rem
                color #444
                margin-bottom .1rem
            p
                font-size .26rem
                color #999
        .icon
            color #999
