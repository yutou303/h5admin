@import '../../../common/stylus/mixin.styl';
.v-login
    overflow hidden
    height 100%
    background-color #FFF
    background-image url('./bg-img.png')
    background-repeat repeat-x
    background-position center bottom
    background-size 100% auto
    .logo
        width 4rem
        margin 1.5rem auto 1rem
        img
            width 100%
        p
            background-color #c11920
            font-size .28rem
            padding .06rem 0 .04rem
            color #FFF
            font-weight bold
            text-align center
            letter-spacing .3rem
            margin-top .12rem
    .form
        width 5rem
        margin 0 auto
        .cell
            padding-bottom 0
            .icon
                font-size .36rem
                color #c11920
            .cell-right
                margin 0 0 0 .2rem
                min-height .7rem
                input
                    height .7rem
        .form-link
            display flex
            justify-content space-between
            padding .25rem .05rem
            a
                color #999
        .btn-danger
            background-color #c11920
    .slogan
        width 4.5rem
        margin 1rem auto
        img
            width 100%
