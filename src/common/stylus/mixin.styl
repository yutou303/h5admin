.clearfix
	display inline-block
	&:after
		content ''
		height 0
		line-height 0
		clear both
		visibility hidden

borderTop($width,$color)
	position relative
	&:after
		content ''
		display block
		position absolute
		left 0
		bottom 0
		width 100%
		border-top $width solid $color
borderLeft($width,$color)
	position relative
	&:before
		content ''
		display block
		position absolute
		left 0
		bottom 0
		height 100%
		border-left $width solid $color


@media (-webkit-min-device-pixel-ratio: 1.5), (min-device-pixel-ratio: 1.5)
	.borderTop
		&:after
			transform scaleY(.7)
	.borderLeft
		&:before
			transform scaleX(.7)
@media (-webkit-min-device-pixel-ratio: 2), (min-device-pixel-ratio: 2)
	.borderTop
		&:after
			transform scaleY(.5)
	.borderLeft
		&:before
			transform scaleX(.5)

bg-img($url)
	background-image url($url + "@2x.png")
	@media (-webkit-min-device-pixel-ratio: 3), (min-device-pixel-ratio: 3)
		background-image url($url + "@3x.png")
